  <script>
  $(document).ready(function() {
   setTimeout(function(){
    $('.addbasket').on('click', function() {
     let productIds = [];
      $(this).find('input[name="id"]').each(function() {
        var productId = $(this).val();
          productIds.push(productId);
          console.log(productId);
       });
        addToCart(productIds);
    });
    
    function addToCart(productIds) {
        $.ajax({
          type: 'POST',
          url: '/cart/add',
// this {data} is bulk button and when you add each product button then you remove  productIds[1],  productIds[2] and  productIds[3].
          data: {
            'items': [{
              'id': productIds[0],
              'quantity': 1
            },{
              'id': productIds[1],
              'quantity': 1
            },{
              'id': productIds[2],
              'quantity': 1
            },{
              'id': productIds[3],
              'quantity': 1
            }]
          },
          dataType: 'json',
          success: function(response) {
          },
          error: function(xhr, status, error) {
             console.error('Error adding product to cart:', error);
          }
        });
      }
   }, 500); 
  });
  </script>
  
