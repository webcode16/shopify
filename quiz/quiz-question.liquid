        display: block;
        transition: 0.3s;
      }

      @keyframes fadeSlideLeft {
        0% {
          opacity: 0;
          transform: translateX(80px);
        }
        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeSlideLeftButton {
        0% {
          opacity: 0;
          transform: translateX(80px);
        }
        70% {
          transform: translateX(-6px);
        }
        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @media(max-width:768px){
        .quiz-heading { font-size: 32px; }
        .popup-heading { font-size: 26px; }
        .stepform select { height: 50px; }
        .stepform h3 { font-size: 22px; }
        .option-card { font-size: 14px; }
        .progressCurrent { height: 30px; width: 30px; font-size: 18px; }
        .progress-step-count { margin-top: -21px; }
      }
