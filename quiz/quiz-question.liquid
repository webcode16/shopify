          {% if block.settings.question_title contains 'current age' or block.settings.question_title contains 'current Age' %}
            <input type="number" min="18" max="100" step="1" class="quiz-text-input" placeholder="Enter your age (e.g. 45)" required style="font-size:20px;text-align:center;">
