  <div class="stepform" data-id="{{ index }}"
    {% if block.type != 'popup' and block.type != 'analyzing' %}
      data-q="{{ question_counter | plus: 1 }}"
    {% endif %}
  >

    {% if block.type == 'analyzing' %}
      <div class="analyzing-wrapper">
        <h3 class="analyzing-title">{{ block.settings.analyze_title }}</h3>
        <p class="analyzing-subtext">{{ block.settings.analyze_subtext }}</p>
        <div class="analyzing-progress-container">
