<script>
  document.addEventListener('click', function (e) {
    const btn = e.target.closest('.prev-step-btn');
    if (!btn || btn.classList.contains('skip-analyzer')) return;

    const currentStep = parseInt(btn.dataset.currentStep, 10);
    let userSex = null;
    if (!currentStep) return;

    const prevStep = currentStep - 1;
    const prevStepEl = document.querySelector(`.stepform[data-id="${prevStep}"]`);
    if (!prevStepEl) return;

    const isAnalyzer = prevStepEl.querySelector('.analyzing-wrapper');

    if (isAnalyzer) {
      e.preventDefault();

      const skipTo = currentStep - 2;
      const skipBtn = document.querySelector('.prev-step-btn');
      skipBtn.classList.add('skip-analyzer');

      showStep(skipTo);

      setTimeout(() => {
        skipBtn.classList.remove('skip-analyzer');
      }, 300);

      return;
    }
  });

  function input_range_main() {
    const progressInput = document.getElementById('progreebar_count_input');
    if (!progressInput) return;

    const totalSteps = parseInt(progressInput.value, 10);
    if (!totalSteps || totalSteps <= 0) return;

    const stepforms = Array.from(document.querySelectorAll('.stepform'));
    const activeStep = document.querySelector('.stepform.active-step');
    if (!activeStep) return;

    const activedataid = parseInt(activeStep.getAttribute('data-id'), 10);

    let popupCount = 0;
    for (let i = activedataid; i <= stepforms.length; i++) {
      const step = document.querySelector(`.stepform[data-id="${i}"]`);
      if (!step) continue;
      if (step.querySelector('.popup-wrapper')) popupCount++;
    }

    if (popupCount > 0) popupCount--;

    const remaining = popupCount;
    const completed = totalSteps - remaining;
    let percent = (completed / totalSteps) * 100;

    if (remaining <= 0) percent = 100;
    percent = percent + 1;

    const fillBar = document.querySelector('.progress-fill');
    if (fillBar) fillBar.style.width = percent + '%';

    const circles = document.querySelectorAll('.progress-step-count .progressCurrent');
    circles.forEach((circle, index) => {
      const stepNumber = index + 1;
      const circlePercent = (stepNumber / totalSteps) * 100;

      if (percent >= circlePercent) {
        circle.classList.add('active-step-circle');
      } else {
        circle.classList.remove('active-step-circle');
      }
    });
  }

  document.addEventListener('DOMContentLoaded', function () {
    let currentStep = 0;

    const quiz_question_main = document.getElementById('quiz_question_main');
    const result_main_custom = document.getElementById('result_main_custom');
    const startBtn = document.getElementById('quizStartBtn');
    const startScreen = document.getElementById('start-1');
    const steps = document.querySelectorAll('.stepform');
    const progressbar = document.getElementById('quiz-progressbar');

    function showStep(step, direction) {
      steps.forEach((s) => {
        s.style.display = 'none';
        s.classList.remove('active-step');
      });

      if (direction === 'prev') {
        const prevStepEl = document.querySelector(`.stepform[data-id="${step}"]`);

        if (prevStepEl) {
          const hasAnalyzer = prevStepEl.querySelector('.analyzing-wrapper');

          if (hasAnalyzer) {
            const prevBtn = prevStepEl.querySelector('.prev-step-btn');

            if (prevBtn) {
              prevBtn.classList.remove('disabled');
            }

            const prev_num = step - 1;

            showStep(prev_num, 'prev');
            return;
          }
        }
      }

      const target = document.querySelector(`.stepform[data-id="${step}"]`);
      if (!target) return;

      target.style.display = 'block';

      setTimeout(() => {
        target.classList.add('active-step');

        const analyze_main = target.querySelector('.analyzing-wrapper');
        if (analyze_main) {
          const fill = analyze_main.querySelector('.analyzing-progress-fill');
          const percentageBox = analyze_main.querySelector('.analyzing-percentage');

          const duration = parseInt(fill.getAttribute('data-duration'), 10);
          const fromPercent = parseInt(fill.getAttribute('data-percentage-from'), 10);
          const toPercent = parseInt(fill.getAttribute('data-percentage'), 10);

          analyze_main.style.display = 'block';
          fill.style.display = 'block';

          fill.style.width = fromPercent + '%';
          if (percentageBox) percentageBox.textContent = fromPercent + '%';

          const range = toPercent - fromPercent;
          const intervalTime = (duration * 1000) / range;

          let percent = fromPercent;

          const interval = setInterval(() => {
            percent++;

            if (percent >= toPercent) {
              percent = toPercent;
              clearInterval(interval);

              setTimeout(() => {
                const target__btn = target.querySelector('.next-step-btn');
                if (target__btn) {
                  target__btn.classList.remove('disabled');
                  target__btn.dispatchEvent(new Event('click', { bubbles: true }));
                }
              }, 2000);
            }

            fill.style.width = percent + '%';
            if (percentageBox) percentageBox.textContent = percent + '%';
          }, intervalTime);
        }

        input_range_main();
      }, 30);

      const isPopup = target.querySelector('.popup-wrapper') !== null;
      const nextBtn = target.querySelector('.next-step-btn');
      const prevBtn = target.querySelector('.prev-step-btn');
      const isAnalyzer = target.querySelector('.analyzing-wrapper') !== null;

      if (isPopup) nextBtn.classList.remove('disabled');
      else nextBtn.classList.add('disabled');

      if (prevBtn) {
        if (step === 1 || isAnalyzer) {
          prevBtn.classList.add('disabled');
          prevBtn.style.pointerEvents = 'none';
          prevBtn.style.opacity = '0.3';
        } else {
          prevBtn.classList.remove('disabled');
          prevBtn.style.pointerEvents = 'auto';
          prevBtn.style.opacity = '1';
        }
        prevBtn.dataset.currentStep = step;
      }


      setTimeout(() => {
        const select = target.querySelector('select');
        if (select) {
          if (select.value !== '') nextBtn.classList.remove('disabled');
          select.onchange = function () {
            if (select.value !== '') nextBtn.classList.remove('disabled');
          };
        }

        const hiddenField = target.querySelector("input[type='hidden']");

        const userInput = target.querySelector(
          'input[type="text"], input[type="email"], input[type="number"], textarea'
        );

        if (userInput) {
          if (userInput.value.trim() !== '') nextBtn.classList.remove('disabled');
          userInput.addEventListener('input', function () {
            if (this.value.trim() !== '') nextBtn.classList.remove('disabled');
            else nextBtn.classList.add('disabled');
          });
        }

        target.onclick = function (e) {
          const card = e.target.closest('.option-card');
          if (!card) return;
          if (isPopup) return;

          const cards = target.querySelectorAll('.option-card');

          if (card.classList.contains('multi-select')) {
            const multiSelectCards = target.querySelectorAll('.option-card.multi-select');
            multiSelectCards.forEach(c => c.classList.remove('active'));
            card.classList.add('active');
            const selected = Array.from(target.querySelectorAll('.option-card.active')).map((c) => c.dataset.value);
            if (hiddenField) hiddenField.value = selected.join(',');
