          </div>
          <div class="analyzing-percentage" id="analyzing-percentage-{{ block.id }}">0%</div>
        </div>
        <div class="quiz-buttons">
          <div class="prev-step-btn" style="display:none">prev</div>
          <div class="next-step-btn" style="display:none">next</div>
        </div>
        <div class="analyzing-loader"><span></span><span></span><span></span></div>
      </div>

    {% elsif block.type == 'popup' %}
