<style>
        body{
        font-family: Merriweather Sans, sans-serif;
        line-height: 1.2;
      }

      .quiz-section-container {
        background-size: cover;
        background-position: center;
        padding: 80px 20px;
        text-align: center;
        height: 100vh;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      section.quiz-main-questions {
        background: url(https://cdn.shopify.com/s/files/1/0766/8242/8671/files/ruan-richard-rodrigues-ZgFCVWGd4l0-unsplash.jpg?v=1763883045) no-repeat center center;
      }

      .quiz-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: {{ section.settings.overlay_color }};
        opacity: {{ section.settings.overlay_opacity }};
        pointer-events: none;
        display: block !important;
      }

      .quiz-inner {
        position: relative;
        z-index: 2;
        opacity: 0;
        transform: translateX(80px);
        animation: fadeSlideLeft 1s ease-out forwards;
      }

      .quiz-heading {
        font-size: 42px;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0;
        opacity: 0;
        transform: translateX(80px);
        animation: fadeSlideLeft 0.9s ease-out 0.2s forwards;
      }

      .quiz-subtext {
        max-width: 900px;
        margin: 20px auto 0;
        font-size: 18px;
        line-height: 28px;
        color: #fff;
        font-weight: 300;
        opacity: 0;
        transform: translateX(80px);
        animation: fadeSlideLeft 0.9s ease-out 0.45s forwards;
      }

      .quiz-start-btn,
      .next-step-btn,
      .prev-step-btn {
        background: rgb(214,118,59);
        padding: 14px 35px;
        border-radius: 50px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        display: inline-block;
        margin-top: 25px;
        border: none;
        transition: 0.3s ease;
      }

      .quiz-start-btn {
        opacity: 0;
        transform: translateX(80px);
        animation: fadeSlideLeftButton 1s ease-out 0.75s forwards;
      }

      .quiz-start-btn:hover,
      .next-step-btn:hover,
      .prev-step-btn:hover {
        background: rgba(214,118,59,0.85);
      }

      .prev-step-btn {
        margin-right: 15px;
        border: 1px solid rgba(214,118,59,0.4);
        background: rgba(214,118,59,0.15);
        color: #1C1C2D;
      }

      .prev-step-btn:hover {
        background: rgb(214,118,59);
        color: #fff;
      }

      .next-step-btn.disabled {
        opacity: 0.4;
        pointer-events: none;
      }

      .stepform {
        display: none;
        padding: 50px 15px;
        text-align: center;
        border-radius: 22px;
        margin: 0 auto;
        max-width: 900px;
        width:100%;
        opacity: 0;
        transform: translateX(80px);
        transition: opacity 0.6s ease, transform 0.6s ease;
      }

      .stepform.active-step {
        opacity: 1;
        transform: translateX(0);
      }

      .stepform h3 {
        font-size: 30px;
        margin-bottom: 25px;
        color: #1C1C2D;
        opacity: 0;
        transform: translateX(50px);
        transition: all 0.5s ease;
      }

      .stepform.active-step h3 {
        opacity: 1;
        transform: translateX(0);
      }

      .popup-wrapper {
        padding: 40px 20px;
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        opacity: 0;
        transform: translateX(80px) scale(0.92);
        transition: opacity 0.6s ease, transform 0.6s ease;
      }

      .stepform.active-step .popup-wrapper {
        opacity: 1;
        transform: translateX(0) scale(1);
      }

      .popup-heading {
        font-size: 32px;
        opacity: 0;
        transform: translateX(60px);
        transition: all 0.5s ease;
      }

      .stepform.active-step .popup-heading {
        opacity: 1;
        transform: translateX(0);
      }

      .popup-image img {
        max-width: 250px;
        margin: 20px auto;
        display: block;
      }

      .option-card {
        border: 2px solid rgba(214,118,59,0.35);
        border-radius: 20px;
        padding: 10px 20px;
        cursor: pointer;
        display: inline-block;
        margin: 5px;
        font-size: 17px;
        transition: all .3s ease;
        background: #fff;
        color: #1C1C2D;
      }

      .option-card:hover {
        transform: translateY(-4px);
        background: rgba(214,118,59,0.1);
        border-color: rgba(214,118,59,0.6);
      }

      .option-card.active {
        border-color: rgb(214,118,59);
        background: rgb(214,118,59);
        color: #fff;
        box-shadow: 0 5px 18px rgba(214,118,59,0.4);
      }

      .quiz-progressbar {
        display: none;
        max-width: 1000px;
        width: 100%;
        margin: 20px auto 10px;
        text-align: center;
        padding-bottom: 30px;
      }

      .progress-track {
        width: 100%;
        height: 10px;
        background: #e6e6e6;
        border-radius: 8px;
        overflow: hidden;
      }

      .progress-fill {
        height: 10px;
        background: #d6763b;
        width: 0%;
        border-radius: 8px 0 0 8px;
        transition: width 0.4s ease-in-out;
        display: block !important;
      }

      .progressCurrent {
        height: 45px;
        width: 45px;
        border-radius: 50%;
        display: flex;
        font-size: 22px;
        justify-content: center;
        align-items: center;
        background-color: #949494;
        color: #fff;
      }

      .progressCurrent.active-step-circle {
        background-color: #d6763b;
        color: #fff;
      }

      #result_main_custom{
        display:none;
        height: 100vh;
        justify-content: center;
        align-items: center;
        font-size: 30px;
        color: #000;
      }

      .analyzing-wrapper {
      text-align: center;
      padding: 60px 20px;
      animation: fadeInUp 0.7s ease-out forwards;
    }

    .analyzing-title {
      font-size: 30px;
      font-weight: 700;
      margin-bottom: 10px;
      opacity: 0;
      animation: fadeInUp 0.7s ease-out 0.1s forwards;
    }

    .analyzing-subtext {
      font-size: 18px;
      opacity: 1 !important;
      margin-bottom: 30px;
      opacity: 0;
      animation: fadeInUp 0.7s ease-out 0.2s forwards;
    }

    .analyzing-progress-container {
      width: 80%;
      margin: 0 auto 25px auto;
    }

    .analyzing-progress-bar {
      width: 100%;
      height: 12px;
      background: #eee;
      border-radius: 10px;
      overflow: hidden;
      margin-bottom: 10px;
    }

    .analyzing-progress-fill {
      width: 0%;
      height: 100%;
      background: #000; /* auto picks theme color */
      border-radius: 10px;
      transition: width 0.2s linear;
    }

    .analyzing-percentage {
      font-size: 22px;
      color: #d6763b;
      font-weight: 600;
      opacity: 1;
      animation: fadeInUp 0.7s ease-out 0.3s forwards;
    }

    /* Wave Loader */
  .analyzing-loader {
    margin-top: 20px;
    width: 60px;
    height: 12px;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .analyzing-loader span {
    width: 10px;
    height: 10px;
    background: #000;
    border-radius: 50%;
    animation: wave 0.9s infinite ease-in-out;
  }

  .analyzing-loader span:nth-child(1) {
    animation-delay: 0s;
  }
  .analyzing-loader span:nth-child(2) {
    animation-delay: 0.15s;
  }
  .analyzing-loader span:nth-child(3) {
    animation-delay: 0.3s;
  }

  @keyframes wave {
    0%, 60%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    30% {
      transform: translateY(-8px);
      opacity: 0.7;
    }
  }



      .progress-step-count {
        margin-top: -29px;
        font-size: 15px;
        font-weight: 600;
        color: #1C1C2D;
        display: flex;
